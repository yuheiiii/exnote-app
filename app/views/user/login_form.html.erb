<div class="container">
   <h1>ログイン</h1>
   <% if @errormessage %>
     <div class="errormessage">
         <%= @errormessage %>
     </div>
  <% end %>
  <%= form_tag("/login") do %>
          <div class="room-form">
          <p>メールアドレス</p>
          <input name="email" type="text">
          <p>パスワード</p>
          <input name="password" type="password" >
          <input type="submit" value="ログイン">
  <% end %>
</div>